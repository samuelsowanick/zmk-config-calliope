        behaviors {
        td0: capslock_0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LSHFT>, <&kp CAPS>;

        td1: numlock_1 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <1>;
            tapping-term-ms = <200>;
            bindings = <&kp KP_DIVIDE>, <&kp KP_NUM>;
                };
            };
        
        keymap {
                compatible = "zmk,keymap";

                default_layer {
